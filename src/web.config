<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Angular Routing Rule: Redirect all routes to index.html -->
        <rule name="Angular Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Check if the request is not for a file or directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- Redirect to index.html to let Angular handle the routing -->
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
    <!-- CORS Configuration -->
    <httpProtocol>
      <customHeaders>
        <!-- Allow requests from shell app at http://localhost:88 -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <!-- Specify allowed HTTP methods -->
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
        <!-- Specify allowed headers -->
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
        <!-- Optional: Allow credentials (Cookies, Authorization headers, etc.) -->
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>